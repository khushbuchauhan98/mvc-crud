@model List<mvccrud.Context.tbl_Student>
@{
    ViewBag.Title = "StudentList";
}

<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Fname</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Description</th>
        <th></th>
        <th></th>
        <th><a href="@Url.Action("Student")"class="btn btn-primary">Add New Student</a></th>
    </tr>

    
        @foreach(var item in Model)
        {
    <tr>
        <td>@item.name</td>
        <td>@item.fname</td>
        <td>@item.email</td>
        <td>@item.mobile</td>
        <td>@item.description</td>
        <td><a href="@Url.Action("EditStudent",new {item.id, item.name,item.fname,item.email,item.mobile,item.description })"><i class="glyphicon glyphicon-pencil"></i></a></td>
        <td><a href="@Url.Action("Delete",new{item.id})"><i class="glyphicon glyphicon-trash"></i></a></td>
    </tr>
        }
    
</table>

